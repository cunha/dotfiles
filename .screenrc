startup_message off
deflogin off
vbell off

altscreen on # keep alternate buffer when exiting less/vim/etc

# allow bold colors
# attrcolor b ".I"
# tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

hardstatus alwayslastline "%?%{wb}%-Lw%?%{yk}%n*%f %t%?(%u)%?%?%{wb}%+Lw%?%{wb}"
defscrollback 50000

