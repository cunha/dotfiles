{
  "title": "NumLockFN",
  "rules": [
    {
      "description": "NumLockFN: NumLock enables NumLockFN mode",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_num_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "numlock_mode",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "numlock_mode",
                "value": 0
              }
            }
          ]
        }
      ]
    },
    {
      "description": "NumLockFN: NL+[hjkl] to Left, Down, Up, Right",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "numlock_mode",
              "value": 1
            }
          ]
        },
