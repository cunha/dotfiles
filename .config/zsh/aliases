peering-dump-configs () {
    ssh peering.usc.edu -tt "cd /opt/peering/web ; sudo ./django-manage.sh dump-configs"
    scp -r peering.usc.edu:/opt/peering/web/local/dump-configs .
}

autoload -Uz add-zsh-hook
