{
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.cursorSurroundingLines": 4,
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 13,
    "editor.fontLigatures": true,
    "editor.formatOnSave": false,
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        80
    ],
    "editor.trimAutoWhitespace": true,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80,
    "explorer.openEditors.visible": 0,
    "files.exclude": {
        "**/.zshlocal": true,
        "**/*.pyc": true,
    },
    "files.watcherExclude": {
        "**/.buckd/**": true,
        "**/buck-out/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
    },
    "files.trimTrailingWhitespace": true,
    "outline.showVariables": false,
    "outline.showModules": false,
    "terminal.integrated.cursorBlinking": true,
    "window.restoreWindows": "none",
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Tomorrow Night Blue",
    "workbench.startupEditor": "none",
    "workbench.tree.indent": 16,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 5,
    // Languages
    "python.jediEnabled": true,
    "python.formatting.provider": "black",
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, UseTab: Never, IndentWidth: 4, TabWidth: 4, BreakBeforeBraces: Attach, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: false, ColumnLimit: 0, AccessModifierOffset: -4 }",
    "[c]": {
        "editor.tabSize": 8,
        "editor.insertSpaces": false,
        "editor.wordWrapColumn": 80
    },
    "[cpp]": {
        "editor.rulers": [
            100,
        ],
        "editor.wordWrapColumn": 100,
    },
    "[markdown]": {
        "editor.wordWrapColumn": 72,
        "editor.wordWrap": "bounded",
    },
    "[python]": {
        "editor.rulers": [
            88,
        ],
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.wordWrapColumn": 88,
    },
    "rust.build_on_save": true,
    "rust.clippy_preference": "on",
    "rust.racer_completion": true,
    "rust.show_warnings": true,
    "rust.rustfmt_path": "/home/cunha/.cargo/bin/rustfmt",
    "[rust]": {
        "editor.rulers": [
            100,
        ],
        "editor.wordWrapColumn": 100,
        "editor.formatOnSave": true,
    },
    "[shellscript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
    },
    // Extensions
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "git-commit",
        "jade",
        "latex",
        "less",
        "markdown",
        "plaintext",
        "pug",
        "restructuredtext",
        "text"
    ],
    "cSpell.userWords": [
        "italo",
        "reimplement",
        "submodules",
        "traceroute"
    ],
    "cSpell.enabled": true,
    "cSpell.showStatus": true,
    "cSpell.dictionaries": ["en"],
    "cSpell.logLevel": "Debug",
    "git.autofetch": true,
    "git.confirmSync": false,
    "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.external.viewer.command": "zathura",
    "latex-workshop.view.pdf.external.viewer.args": [
        "%PDF%"
    ],
    "latex-workshop.chktex.enabled": false,
    "metaGo.decoration.backgroundColor": "yellow",
    "metaGo.decoration.backgroundOpacity": "1",
    "metaGo.decoration.color": "blue",
    "metaGo.decoration.fontFamily": "Fira Code",
    "metaGo.decoration.fontWeight": "normal",
    "rewrap.wrappingColumn": 72,
    "shellcheck.enable": true,
}